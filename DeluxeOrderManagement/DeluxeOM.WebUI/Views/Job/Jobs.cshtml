@using DeluxeOM.Models
@model JobModel
@{
    ViewBag.Title = "Jobs";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="order_page_wrapper">
    <div class="control_wrapper">
        <div class="row">
            <div class="col-xs-1 padd_zero"><h6 class="filter_heading">filters</h6></div>
            <div class="col-xs-10 padd_zero"></div>
            <div class="col-xs-1 padd_zero"><span class="toggle_arrow f_right"><i class="fa fa-chevron-up" aria-hidden="true"></i></span></div>
        </div>
        <hr />
        <div id="toggle_wrapper" class="reports_wrapper">
            @using (Html.BeginForm("Jobs", "Job", FormMethod.Get))
            {
                <div class="row row_one">
                    @Html.DropDownListFor(m => m.JobSearch.JobTitleID, new List<SelectListItem>
                   { new SelectListItem{Text="Annoucement", Value="ann"},
                     new SelectListItem{Text="Pipeline Order", Value="po"},
                     new SelectListItem{Text="vidlist", Value="vid"},
                     new SelectListItem{Text="pricereport", Value="pr"},
                     new SelectListItem{Text="qcreport", Value="qc"}}, new { @class = "dropdown_control" })              </div>
                <div class="row row_two">
                    *@Html.TextBoxFor(m => m.JobSearch.StartDate, new { placeholder = "Date", @class = "datepicker report_start_date", Value = "" })
                </div>
                 <div class="row row_three">
                     <button type="submit" class="btn btn-default btn_custom" id="Run_btn"><i class="fa fa-file-excel-o" aria-hidden="true"></i>Run</button>
                     </div>
            }
        </div>
    </div>
</div>