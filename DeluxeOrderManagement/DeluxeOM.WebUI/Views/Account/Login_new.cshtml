
@{
    ViewBag.Title = "Login_new";
    Layout = "~/Views/Shared/_LayoutLogin.cshtml";
}

<div class="row login_wrapper">
<div class="row logo text-center"><img src="~/Content/Images/logo.png" /></div>
<div class="row"><p class="logo_txt text-center">Deluxe media orem ipsum dolor sit amet, consectetutor adipiscing elit.</p></div>
<div class="login_form_wrapper">
