@using DeluxeOM.Models
@model ReportsModel
@{
    ViewBag.Title = "Reports";
    Layout = "~/Views/Shared/_Layout.cshtml";
    //Html.EnableClientValidation(true);
}
<div class="order_page_wrapper">
    <div class="control_wrapper">
        <div class="row">
            <div class="col-xs-1 padd_zero"><h6 class="filter_heading">filters</h6></div>
            <div class="col-xs-10 padd_zero"></div>
            @*<div class="col-xs-1 padd_zero"><span class="toggle_arrow f_right"><i class="fa fa-chevron-up" aria-hidden="true"></i></span></div>*@
        </div>
        <hr />
        <div id="toggle_wrapper" class="reports_wrapper">
            @using (Html.BeginForm("Reports1", "Report", FormMethod.Get))
            {

                <div class="row row_one">
                    <div class="col-xs-2 control_padd">
                        <p class="dropdown_txt">Content Provider</p>
                        @Html.DropDownListFor(m => m.ReportSearch.ContentProvider, new SelectList(Model.ReportSearch.ContentProviders), new { @class = "dropdown_control" })
                    </div>
                    <div class="col-xs-2 control_padd">
                        <p class="dropdown_txt">Content Distributor</p>
                        @Html.DropDownListFor(m => m.ReportSearch.ContentDistributor, new SelectList(Model.ReportSearch.ContentDistributors), new { @class = "dropdown_control" })
                    </div>
                    <div class="col-xs-2 control_padd">
                        <p class="dropdown_txt">Report Title</p>

                        @Html.DropDownListFor(m => m.ReportSearch.ReportTitleID, new List<SelectListItem>
                   { new SelectListItem{Text="Annoucement Analysis Report", Value="1"},
                     new SelectListItem{Text="Cancelled Avails Report", Value="2"},
                      new SelectListItem{Text="Finance Report", Value="3"},
                      new SelectListItem{Text="Announcement Change Report", Value="4"}}, new { @class = "dropdown_control" })
                    </div>
                    <div class="col-xs-2 control_padd"></div>
                    <div class="col-xs-2 control_padd"></div>
                    <div class="col-xs-2 control_padd"></div>
                </div>
                <div class="row row_two">
                    <div class="col-xs-2 control_padd">
                        <p class="dropdown_txt">Video Version</p>
                        @Html.TextBoxFor(model => model.ReportSearch.VideoVersion, new { @class = "input_box" })
                    </div>
                    <div class="col-xs-2 control_padd">
                        <p class="dropdown_txt">Local Edit</p>

                        @Html.DropDownListFor(m => m.ReportSearch.LocalEdit, new SelectList(Model.ReportSearch.LocalEdits), new { @class = "dropdown_control" })
                        @Html.HiddenFor(x => Model.ReportSearch.LocalEdits)
                    </div>

                    <div class="col-xs-2 control_padd"></div>
                    <div class="col-xs-2 control_padd"></div>
                    <div class="col-xs-2 control_padd"></div>
                    <div class="col-xs-2 control_padd"></div>
                </div>
                    <div class="row row_three">
                        <div class="col-xs-2 control_padd">
                            <p class="dropdown_txt">Record Created Date Range</p>
                            @Html.TextBoxFor(m => m.ReportSearch.CreatedStartDate, new { placeholder = "Start Date", @class = "datepicker report_start_date", Value = "" })
                            @Html.ValidationMessageFor(m => m.ReportSearch.CreatedStartDate, "", new { @class = "text-danger" })
                            <span class="text-danger" id="report_start_date_err">Please select start date</span><br />
                            <span class="text-danger" id="report_compare_date_err">Start date should be less than end date</span>
                        </div>
                        <div class="col-xs-2 control_padd">
                            <p class="dropdown_txt v_hdn">Record Created Date Range</p>
                            @Html.TextBoxFor(m => m.ReportSearch.CreatedEndDate, new { placeholder = "End Date", @class = "datepicker report_end_date", Value = "" })
                            @Html.ValidationMessageFor(m => m.ReportSearch.CreatedEndDate, "", new { @class = "text-danger" })
                            <span class="text-danger" id="report_end_date_err">Please select end date</span>
                        </div>
                        <div class="col-xs-2 control_padd"></div>
                        <div class="col-xs-2 control_padd"></div>
                        <div class="col-xs-2 control_padd"></div>
                        <div class="col-xs-2 control_padd"></div>
                    </div>
                    <div class="row row_four">
                        <div class="col-xs-2 control_padd">
                            <p class="dropdown_txt">Import Date Range</p>
                            @Html.TextBoxFor(m => m.ReportSearch.ImportStartDate, new { placeholder = "Start Date", @class = "datepicker import_start_date", Value = "" })
                            @Html.ValidationMessageFor(m => m.ReportSearch.ImportStartDate, "", new { @class = "text-danger" })
                            <span class="text-danger" id="import_start_date_err">Please select start date</span><br />
                            <span class="text-danger" id="import_compare_date_err">Start date should be less than end date</span>
                        </div>
                        <div class="col-xs-2 control_padd">
                            <p class="dropdown_txt v_hdn">Record Created Date Range</p>
                            @Html.TextBoxFor(m => m.ReportSearch.ImportEndDate, new { placeholder = "End Date", @class = "datepicker import_end_date", Value = "" })
                            @Html.ValidationMessageFor(m => m.ReportSearch.ImportEndDate, "", new { @class = "text-danger" })
                            <span class="text-danger" id="import_end_date_err">Please select end date</span>
                        </div>
                        <div class="col-xs-2 control_padd"></div>
                        <div class="col-xs-2 control_padd"></div>
                        <div class="col-xs-2 control_padd"></div>
                        <div class="col-xs-2 control_padd"></div>
                    </div>
                    <div class="row row_five">
                        <div class="col-xs-2 control_padd">
                            <p class="dropdown_txt">Announcemnet Processed Date</p>
                            @Html.DropDownListFor(m => m.ReportSearch.JobId, new SelectList(Model.ReportSearch.AnnouncementProcessedDate, "JobId", "Date"), "", new { @class = "dropdown_control" })
                            @Html.ValidationMessageFor(m => m.ReportSearch.JobId, "", new { @class = "text-danger" })
                        </div>
                        <div class="col-xs-2 control_padd"></div>
                        <div class="col-xs-2 control_padd"></div>
                        <div class="col-xs-2 control_padd"></div>
                        <div class="col-xs-2 control_padd"></div>
                    </div>
                        <div class="row row_six">
                            <div class="col-xs-3 padd_zero">
                                <button type="button" class="btn btn-default left_btn btn_custom" id="ClearAll">clear all</button>
                                <button type="submit" class="btn btn-default btn_custom"><i class="fa fa-file-excel-o" aria-hidden="true"></i>export excel</button>
                            </div>
                            <div class="col-xs-9 padd_zero"></div>
                        </div>
            }
        </div>
    </div>
</div>