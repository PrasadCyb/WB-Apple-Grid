
@{
    ViewBag.Title = "Users_new";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

    <div class="users_page_wrapper">
        <div class="row">
            <div class="col-xs-12 padd_zero"><h6 class="filter_heading">users: list</h6></div>
        </div>
        <div class="row">
            <div class="col-xs-12 padd_zero"><button type="button" class="btn btn-default btn_custom create_user_btn" data-toggle="modal" data-target="#create_user">create new</button></div>
        </div>
        <!--Create user pop up start-->
        <div class="modal fade" id="create_user" role="dialog">
            <div class="modal-dialog">

                <!-- Modal content-->
                <div class="modal-content">
                    <div class="modal-header">
                        <button type="button" class="close" data-dismiss="modal"><i class="fa fa-times-circle" aria-hidden="true"></i></button>
                        <h4 class="create_order_modal_title">user-create new</h4>
                    </div>
                    <div class="modal-body">
                        <div class="form_wrapper">
                            <div class="row row_bottom_padd">
                                <div class="col-xs-4 control_padd">
                                    <input type="text" class="user_details" placeholder="User Name">
                                </div>
                                <div class="col-xs-4 control_padd">
                                    <input type="text" class="user_details" placeholder="First Name">
                                </div>
                                <div class="col-xs-4 control_padd">
                                    <input type="text" class="user_details" placeholder="Last Name">
                                </div>
                            </div>
                            <div class="row row_bottom_padd">
                                <div class="col-xs-4 control_padd">
                                    <input type="text" class="user_details" placeholder="Email">
                                </div>
                                <div class="col-xs-4 control_padd">
                                    <input type="text" class="user_details" placeholder="Phone No">
                                </div>
                                <div class="col-xs-4 control_padd">
                                    <input type="text" class="user_details" placeholder="Title">
                                </div>
                            </div>
                            <div class="row row_bottom_padd">
                                <div class="col-xs-12 control_padd">
                                    <input type="checkbox" name="media_type" value="active"><label for="checkbox" class="checkbox_label">Active</label>
                                </div>
                            </div>
                            <div class="row row_bottom_padd">
                                <div class="col-xs-4 control_padd">
                                    <input type="text" class="user_details" placeholder="Password">
                                </div>
                                <div class="col-xs-4 control_padd">
                                    <input type="text" class="user_details" placeholder="Confirm Password">
                                </div>
                                <div class="col-xs-4 control_padd roll_dropdown">
                                    <p class="dropdown_txt">Roll</p>
                                    <select class="dropdown_control">
                                        <option value="volvo">Warner Brother</option>
                                        <option value="saab">Saab</option>
                                    </select>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="modal-footer">
                        <span data-dismiss="modal" class="back_to_list"><i class="fa fa-chevron-left" aria-hidden="true"></i>&nbsp; Back To List</span>
                        <button type="button" class="btn btn-default btn_custom">create</button>
                    </div>
                </div>

            </div>

        </div>

        <!--Create user pop up end-->
        <div class="row">
            <div class="col-xs-12 padd_zero">
                <table class="table table-bordered">
                    <thead>
                        <tr>
                            <th>Firstname</th>
                            <th>Lastname</th>
                            <th>Email</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <td>John</td>
                            <td>Doe</td>
                            <td>john@example.com</td>
                        </tr>
                        <tr>
                            <td>Mary</td>
                            <td>Moe</td>
                            <td>mary@example.com</td>
                        </tr>
                        <tr>
                            <td>July</td>
                            <td>Dooley</td>
                            <td>july@example.com</td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>
        </div>

