@model DeluxeOM.Models.Order
<h2>EditOrder</h2>

@using (Html.BeginForm("EditOrder", "Order", FormMethod.Post))
{
    @Html.AntiForgeryToken()
    <table class="table" border="1">
        <tr>
            <td>
                Selected Title<br>
                @Html.DisplayFor(m => m.Title)
                @Html.HiddenFor(m => m.Title)
            </td>
            <td>
                Order Status<br>
                @Html.DisplayFor(m => m.OrderStatus)
                @Html.HiddenFor(m => m.OrderStatus)
            </td>
            <td>
                PO Number<br>
                @Html.DisplayFor(m => m.MPO)
                @Html.HiddenFor(m => m.MPO)
            </td>
        </tr>
        <tr>
            <td>
                HAL ID<br>
                @Html.DisplayFor(m => m.HALID)
                @Html.HiddenFor(m => m.HALID)
            </td>
            <td>
                First Start Date(Announcement)<br>
                @Html.DisplayFor(m => m.FirstAnnouncementDate)
                @Html.HiddenFor(m => m.FirstAnnouncementDate)
            </td>
        </tr>
        <tr>
            <td>
                Region<br>
                @Html.DisplayFor(m => m.Region)
                @Html.HiddenFor(m => m.Region)
            </td>
            <td>
                Territory<br>
                @Html.DisplayFor(m => m.Territory)
                @Html.HiddenFor(m => m.Territory)
            </td>
            <td>
                Language<br>
                @Html.DisplayFor(m => m.Language)
                @Html.HiddenFor(m => m.Language)
            </td>
        </tr>
        <tr>
            <td>
                Order Category<br>
                @Html.EditorFor(m => m.OrderCategory)
                @Html.HiddenFor(m => m.OrderCategory)
            </td>
        <tr>
        <tr>
            <td>
                Request Number<br>
                @Html.EditorFor(m => m.RequestNumber)
            </td>
            <td>
                Vendor ID<br>
                @Html.EditorFor(m => m.VendorId)
            </td>
            <td>
                Due Date<br>
                @Html.EditorFor(m => m.DueDate)
            </td>
        </tr>
        <tr>
            <td>
                Greenlight Sent Date<br>
                @Html.EditorFor(m => m.GreenlightSent)
            </td>
            <td>
                Greenlight Received Date<br>
                @Html.EditorFor(m => m.GreenlightReceived)
            </td>
        </tr>
        <tr>
            <td>
                Assets Required<br>
                @Html.DisplayFor(m => m.AssetRequired)
            </td>
        </tr>
        <tr>
            <td>
                Order Type<br>
                @Html.EditorFor(m => m.OrderType)
            </td>
        </tr>
        <tr>
            <td>
                EST UPC<br>
                @Html.EditorFor(m => m.ESTUPC)
            </td>
            <td>
                VOD UPC<br>
                @Html.EditorFor(m => m.VODUPC)
            </td>
        </tr>
    </table>
    @Html.HiddenFor(m => m.OrderId)
    @Html.HiddenFor(m => m.AnnouncemntId)
    @Html.HiddenFor(m => m.VId)
    <button type="submit" class="btn btn-default btn_custom">Save</button>
}
