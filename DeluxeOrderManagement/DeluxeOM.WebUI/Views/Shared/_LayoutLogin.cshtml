<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Deluxe Avails - @ViewBag.Title</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    @RenderSection("Styles", required: false)
    <link href="https://fonts.googleapis.com/css?family=Libre+Franklin" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
</head>
<body>
    <div id="loading">
        <img id="loading-image" src="../../Content/Images/Loading_icon.gif" alt="Loading..." />
    </div>
    <div class="container-fluid">
        <div class="row dark_wrapper"></div>
        @RenderBody()
        <div class="row login_footer">
            <div class="col-xs-12 padd_zero login_footer_text">Copyright 2017 - Deluxe. All Rights Reserved</div>
        </div>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
    <script type="text/javascript">
        $(document).ready(function () {
            $(".login_wrapper .login_form_wrapper form .validation-summary-errors ul").css({ "margin": "0", "padding": "0", "list-style-type": "none" });
        });
        $(window).load(function () {
            $('#loading').hide();            
        });
    </script>
</body>
</html>

